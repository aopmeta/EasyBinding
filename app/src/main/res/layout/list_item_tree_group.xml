<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_tree_item_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_gray_color_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingEnd="8dp"
    android:paddingBottom="8dp">

    <ViewSwitcher
        android:id="@+id/switcher_tree_item_group"
        android:layout_width="26dp"
        android:layout_height="26dp">

        <ImageView
            android:id="@+id/iv_tree_item_expand_group"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/ic_arrow_right_gray" />

        <androidx.core.widget.ContentLoadingProgressBar
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </ViewSwitcher>


    <TextView
        android:id="@+id/tv_tree_item_group_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="16sp"
        android:layout_weight="1"
        android:textColor="#333333" />
</LinearLayout>