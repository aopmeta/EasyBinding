<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_sample_two_way_bind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/double_base"
        android:layout_marginEnd="@dimen/double_base"
        app:layout_constraintBottom_toTopOf="@id/et_sample_two_way_bind"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/et_sample_two_way_bind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/double_base"
        android:layout_marginEnd="@dimen/double_base"
        android:hint="@string/hint_two_way_bind_sample"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@id/btn_goto_tree"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sample_two_way_bind" />

    <Button
        android:id="@+id/btn_goto_tree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/big"
        android:text="@string/open_tree_sample"
        app:layout_constraintBottom_toTopOf="@id/btn_goto_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_sample_two_way_bind" />

    <Button
        android:id="@+id/btn_goto_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base"
        android:text="@string/open_list_sample"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_goto_tree" />

</androidx.constraintlayout.widget.ConstraintLayout>